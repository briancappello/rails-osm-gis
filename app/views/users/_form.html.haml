= form_with model: @user, url: url, local: true do |f|

  = render 'shared/errors', model: @user

  .form-group
    = f.label :name, class: 'control-label'
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :email, class: 'control-label'
    = f.email_field :email, class: 'form-control'

  - if url == sign_up_path
    .form-group
      = f.label :password, class: 'control-label'
      = f.password_field :password, class: 'form-control'

    .form-group
      = f.label :password_confirmation, 'Confirm Password', class: 'control-label'
      = f.password_field :password_confirmation, class: 'form-control'
  - else
    = link_to change_password_user_path, class: 'btn btn-warning pull-right' do
      Change password

  %button.btn.btn-primary{type: 'submit', name: 'commit'}
    = submit_text
