%li.clearfix.micropost{id: "micropost-#{micropost.id}"}
  = link_to micropost.user do
    = gravatar_for micropost.user, size: 50
  .user
    = link_to micropost.user do
      = micropost.user.name
  .content= micropost.content
  .picture= image_tag micropost.picture.url if micropost.picture?
  %small.created_at
    = h("Posted #{time_ago_in_words(micropost.created_at)} ago")
    - if current_user?(micropost.user)
      |
      = link_to micropost, method: :delete, data: { confirm: 'Are you sure?' } do
        delete
