%nav.navbar.navbar-fixed-top.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar', 'aria-expanded': 'false', 'aria-controls': 'navbar'}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to root_path, id: 'logo', class: 'navbar-brand' do
        Sample App
    %nav#navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: ('active' if current_page?(root_path))}
          = link_to root_path do
            Home
        %li{class: ('active' if current_page?(help_path))}
          = link_to help_path do
            Help
        - if logged_in?
          %li
            = link_to users_path do
              Users
          %li.dropdown
            %a.dropdown-toggle{href: '#', 'data-toggle': 'dropdown'}
              Account
              %b.caret
            %ul.dropdown-menu
              %li{class: ('active' if current_page?(user_path(current_user)))}
                = link_to user_path(current_user) do
                  Profile
              %li{class: ('active' if current_page?(edit_user_path(current_user)))}
                = link_to edit_user_path(current_user) do
                  Settings
              %li.divider
              %li
                = link_to logout_path do
                  Logout
        - else
          %li{class: ('active' if current_page?(login_path))}
            = link_to login_path do
              Log in
